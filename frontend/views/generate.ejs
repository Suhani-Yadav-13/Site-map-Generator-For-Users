<% layout('layouts/main') %>

<div class="container mt-2">
  <div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
      <div class="card shadow-lg border-2 rounded-5 overflow-hidden">
        <!-- Header -->
        <div class="bg-primary text-white text-center py-4">
          <h3 class="mb-0 fw-bold">Generate Sitemap</h3>
        </div>

        <!-- Body -->
        <div class="card-body p-5">
          <form id="generateForm" method="post" enctype="multipart/form-data">
            <!-- Project Name -->
            <div class="mb-3">
              <label class="form-label fw-semibold">Project Name</label>
              <input
                type="text"
                id="projectName"
                name="projectName"
                class="form-control form-control-lg shadow-sm"
                placeholder="Enter project name"
                value="<%= (typeof sitemap !== 'undefined' && sitemap) ? projectName : '' %>"
                required
              />
            </div>

            <!-- Upload HTML File -->
            <div class="mb-3">
              <label class="form-label fw-semibold">Upload HTML File</label>
              <input
                type="file"
                id="htmlFile"
                class="form-control form-control-lg shadow-sm"
                name="htmlfile"
                accept=".html,.htm"
              />
              <small class="text-muted">You can upload a local HTML file to generate a sitemap.</small>
            </div>

            <!-- Paste HTML -->
            <div class="mb-3">
              <label class="form-label fw-semibold">Or Paste HTML Here</label>
              <textarea
                id="rawHtml"
                class="form-control shadow-sm"
                name="rawhtml"
                rows="4"
                placeholder="Paste raw HTML here..."
              ><%= (typeof sitemap !== 'undefined' && sitemap) ? rawhtml : '' %></textarea>
            </div>

            <!-- Submit Button -->
            <div class="d-grid">
              <button
                type="submit"
                class="btn btn-success btn-lg rounded-4 shadow-sm"
              >
                <i class="bi bi-diagram-3 me-2"></i> Generate
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Results Section -->
  <% if (typeof sitemap !== 'undefined' && sitemap) { %>

  <div class="row justify-content-center mt-3">
    <div class="col-md-10 col-lg-8">
      <div class="card border-0 shadow-sm rounded-5 text-center p-4 bg-light">
        <div class="card-body">
          <div class="display-5 text-info mb-2">
            <i class="bi bi-info-circle"></i>
          </div>
          <h5 class="alert-heading">‚úÖ Sitemap Generated!</h5>
          <p class="mb-1">Links found: <strong><%= links.length %></strong></p>
        </div>
        <div class="d-flex justify-content-center flex-wrap gap-2 mt-3">
          <button id="downloadTxtBtn" class="btn btn-outline-secondary btn-sm shadow-sm mb-4">
            <i class="bi bi-file-earmark-code me-1"></i> Download TXT
          </button>
          
          <button id="downloadHtmlBtn" class="btn btn-outline-primary btn-sm shadow-sm mb-4">
            <i class="bi bi-file-earmark-code me-1"></i> Download HTML
          </button>

          <!-- üîπ New button -->
          <a href="/sitemap/visual/<%= sitemap._id %>" class="btn btn-outline-success btn-sm shadow-sm mb-4">
            <i class="bi bi-diagram-3 me-1"></i> View Visual Sitemap
          </a>

          <a href="/history" class="btn btn-dark btn-sm shadow-sm mb-4">
            <i class="bi bi-clock-history me-1"></i> View History
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Hidden content for downloads -->
  <pre id="sitemapLinks" style="display: none"><%= links.join('\n') %></pre>
  <pre id="sitemapXml" style="display: none"><%= xml %></pre>
</div>

<% } else { %>
<!-- When no sitemap is generated yet -->
<div class="row justify-content-center mt-3">
  <div class="col-md-10 col-lg-8">
    <div class="card border-0 shadow-sm rounded-5 text-center p-4 bg-light">
      <div class="card-body">
        <div class="display-5 text-info mb-2">
          <i class="bi bi-info-circle"></i>
        </div>
        <h6 class="card-title fw-bold mb-1">No sitemap generated yet</h6>
        <p class="card-text text-muted mb-0">Links found: <strong>0</strong></p>
      </div>
    </div>
  </div>
</div>
<% } %>

<!-- Floating Alert -->
<div id="floatingAlert" class="alert alert-warning alert-dismissible fade d-none shadow-lg position-fixed top-0 start-50 translate-middle-x mt-3" role="alert" style="z-index: 1050; max-width: 600px">
  <span id="alertMessage"></span>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>

<script>
  // Floating alert function
  function showFloatingAlert(message, type = "warning") {
    const alertBox = document.getElementById("floatingAlert");
    const alertMessage = document.getElementById("alertMessage");

    alertMessage.textContent = message;
    alertBox.classList.remove("d-none","fade","alert-warning","alert-danger","alert-success");
    alertBox.classList.add(`alert-${type}`, "show");

    setTimeout(() => {
      alertBox.classList.remove("show");
      alertBox.classList.add("fade");
    }, 4000);
  }

  function validateBeforeDownload(contentId) {
    const content = document.getElementById(contentId)?.innerText.trim();
    if (!content) {
      showFloatingAlert("‚ö†Ô∏è Please generate a sitemap before downloading.","warning");
      return false;
    }
    return true;
  }

  // TXT Download
  document.getElementById("downloadTxtBtn")?.addEventListener("click", function () {
    if (!validateBeforeDownload("sitemapLinks")) return;
    const content = document.getElementById("sitemapLinks").innerText;
    const blob = new Blob([content], { type: "text/plain" });
    const link = document.createElement("a");
    link.href = URL.createObjectURL(blob);
    link.download = "sitemap.txt";
    link.click();
  });

  // HTML Download
  document.getElementById("downloadHtmlBtn")?.addEventListener("click", function () {
    if (!validateBeforeDownload("sitemapXml")) return;
    const content = document.getElementById("sitemapXml").innerText;
    const blob = new Blob([content], { type: "text/html" });
    const link = document.createElement("a");
    link.href = URL.createObjectURL(blob);
    link.download = "sitemap.html";
    link.click();
  });
</script>
